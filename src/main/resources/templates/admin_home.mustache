<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Home</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link
            rel="stylesheet"
            type="text/css"
            media="screen"
            href="./css/main.css"
        />
        <link rel="stylesheet" type="text/css" media="screen" href="./css/admin_page.css" />
    </head>
    <body>
        <nav id="navbar">
            <ul>
                <li id="navitem"><a href="/">Home</a></li>
            </ul>
        </nav>
        <div class="container" id="main">

            <select id="sortBy" name="sortOption">
                    <option value="all">All</option>
                    <option value="eligible">Eligible</option>
                    <option value="nonEligible">Non-Eligible</option>
            </select>

            <div class="appHeaderContainer">
                <div class="appHeader">
                    <p>Name</p>
                </div>
                <div class="appHeader">
                    <p>School</p>
                </div>
                <div class="appHeader">
                    <p>Eligible</p>
                </div>
            </div>
            <hr>
            {{#applications}}
            <div class="applicantContainer">
                <div class="appInfoContainer">
                    <a
                        class="appInfo"
                        href="/admin/applicants/{{ id }}"
                        class="applicantName"
                        >{{ name }}</a
                    >
                </div>
                <div class="appInfoContainer">
                    <p class="appSchool">{{ school }}</p>
                </div>
                <div>
                    <p class="appEligible">{{ eligible }}</p>
                </div>
            </div>
            {{/applications}}
        </div>

        <script src="./javascript/adminPage.js"></script>
    </body>
</html>
